<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/bg"
              android:gravity="center"
              android:layout_gravity="center">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/installedPartsText"
            android:textSize="12sp"
            android:gravity="left"
            android:text="Installed Parts"/>

    <ListView
            android:layout_height="0dp"
            android:id="@+id/overviewParts"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            android:layout_width="fill_parent"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tuningValuesText"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Tuning Values"/>

    <ListView
            android:layout_height="0dp"
            android:id="@+id/overviewTuning"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            android:layout_width="fill_parent"/>

    <Button
            android:text="Apply values and add new time"
            android:onClick="onClick"
            style="@style/SubButtonText"
            android:background="@drawable/black_button"
            android:id="@+id/useAndAddButton"
            android:layout_width="wrap_content"/>

</LinearLayout>