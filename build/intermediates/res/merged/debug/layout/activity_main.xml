<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/carbon_bg"
              android:gravity="center_horizontal">

    <TextView
            android:id="@+id/trackSelectorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:text="Select the game"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/scrollViewMain">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <Button
                    android:id="@+id/gt3button"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gran Turismo 3"
                    android:background="@drawable/black_button"
                    style="@style/ButtonText"/>

            <Button
                    android:id="@+id/gt4button"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    style="@style/ButtonText"
                    android:gravity="center_horizontal"
                    android:text="Gran Turismo 4"/>

            <Button
                    android:id="@+id/gt5button"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black_button"
                    style="@style/ButtonText"
                    android:gravity="center_horizontal"
                    android:text="Gran Turismo 5"/>

            <Button
                    android:id="@+id/gt0button"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/black_button"
                    style="@style/ButtonText"
                    android:text="Gran Turismo PSP"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/E:/Workspaces/Eclipse/GranTurismoLapTimer/res/layout/activity_main.xml -->